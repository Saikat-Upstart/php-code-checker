{
  "extra": {
    "php-code-checker": {
      "php": "php",
      "scan-dir": "",
      "bin-dir": "vendor/bin",
      "exclude-dirs": ["vendor", ".idea", ".git"],
      "forbidden-methods": ["var_dump(", "die(", "exit(", "print_r("],
      "coverfish-output-level": "1",
      "phpunit-xml": "phpunit.xml",
      "phpunit-coverage": "true",
      "phpcs-standard": "vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/Generic",
      "phpmd-xml": "phpmd.xml"
    }
  }
}
